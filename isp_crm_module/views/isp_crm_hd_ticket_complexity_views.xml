<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="isp_crm_module_hd_ticket_complexity_search" model="ir.ui.view">
        <field name="name">Helpdesk Ticket Complexity Tree - Search</field>
        <field name="model">isp_crm_module.helpdesk_ticket_complexity</field>
        <field name="arch" type="xml">
            <search string="Complexity Search">
                <field name="name"/>
                <field name="time_limit"/>
            </search>
        </field>
    </record>

    <record id="isp_crm_module_hd_ticket_complexity_tree" model="ir.ui.view">
        <field name="name">Helpdesk Ticket Complexity Tree</field>
        <field name="model">isp_crm_module.helpdesk_ticket_complexity</field>
        <field name="arch" type="xml">
            <tree string="Complexity">
                <field name="name"/>
                <field name="time_limit"/>
            </tree>
        </field>
    </record>

    <record id="isp_crm_module_hd_ticket_complexity_form" model="ir.ui.view">
        <field name="name">Helpdesk Ticket Complexity Form</field>
        <field name="model">isp_crm_module.helpdesk_ticket_complexity</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <form string="Complexity">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="time_limit"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="isp_crm_module_hd_ticket_complexity_action" model="ir.actions.act_window">
        <field name="name">Helpdesk Ticket Complexity</field>
        <field name="res_model">isp_crm_module.helpdesk_ticket_complexity</field>
        <field name="view_type">form</field>
        <field name="view_id" ref="isp_crm_module.isp_crm_module_hd_ticket_complexity_tree"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to set a new complexity level for the tickets in your helpdesk model.
            </p>
        </field>
    </record>

