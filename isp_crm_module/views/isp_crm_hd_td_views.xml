<?xml version="1.0"?>
<odoo>

    <record id="isp_crm_module.helpdesk_td_ticket_list" model="ir.ui.view">
        <field name="name">List of Ticket Types</field>
        <field name="model">isp_crm_module.helpdesk_td</field>
        <field name="arch" type="xml">
            <tree string="Helpdesk Ticket List">
                <field name="type"/>
                <field name="stage"/>
                <field name="assigned_to"/>
                <field name="complexity"/>
            </tree>
        </field>
    </record>

    <!--Ticket Kanban-->
    <record model="ir.ui.view" id="view_isp_crm_module_helpdesk_td_ticket_kanban">
        <field name="problem">isp.crm_module.kanban</field>
        <field name="model">isp_crm_module.helpdesk_td</field>
        <field name="type">kanban</field>
        <field name="arch" type="xml">
            <kanban default_group_by="default_stages" class="o_kanban_small_column o_kanban_project_tasks" quick_create="false">
                <field name="default_stages" options='{"group_by_tooltip": {"requirements": "Description", "legend_priority": "Use of stars"}}'/>
                <field name="color"/>
                <templates>
                <t t-name="kanban-box">
                    <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
                        <div class="oe_kanban_content">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong><br/>
                                    <strong class="o_kanban_record_title"><field name="problem"/></strong><br/>
                                    <strong class="o_kanban_record_title"><field name="type"/></strong><br/>
                                    <strong class="o_kanban_record_title"><field name="assigned_to"/></strong><br/>
                                    <!--<field name="type" widget="many2one_tags" options="{'color_field': 'color'}" readonly="1"/>-->
                                    <small class="o_kanban_record_subtitle text-muted">
                                        <field name="complexity" />
                                    </small>
                                </div>
                                <div class="o_dropdown_kanban dropdown" groups="base.group_user">
                                    <a class="dropdown-toggle btn" data-toggle="dropdown" href="#" >
                                        <span class="fa fa-ellipsis-v" aria-hidden="true"/>
                                    </a>
                                    <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                        <li t-if="widget.editable"><a type="edit">Edit Ticket</a></li>
                                        <li t-if="widget.deletable"><a type="delete">Delete</a></li>
                                        <li class="divider"></li>
                                        <li class="dropdown-header">Record's Colour</li>
                                        <li>
                                            <ul class="oe_kanban_colorpicker" data-field="color"/>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="priority" widget="priority"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                </div>
                            </div>
                        </div>
                        <div class="oe_clear"></div>
                    </div>
                </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="isp_crm_module.helpdesk_td_ticket_search" model="ir.ui.view">
        <field name="name">Search Helpdesk TD Ticket</field>
        <field name="model">isp_crm_module.helpdesk_td</field>
        <field name="arch" type="xml">
            <search string="Helpdesk TD Type Search">
                <field name="type" string="Everywhere" filter_domain="['|','|','|',('type','ilike',self),('stage','ilike',self),('assigned_to','ilike',self),('complexity','ilike',self)]"/>
            </search>
        </field>
    </record>

    <record id="isp_crm_module.helpdesk_td_ticket_create" model="ir.ui.view">
        <field name="name">Create Helpdesk TD Ticket</field>
        <field name="model">isp_crm_module.helpdesk_td</field>
        <field name="arch" type="xml">
            <form string="Helpdesk TD Ticket Create Form">
                <header>
                    <button
                        name="action_mark_done_ticket_td"
                        string="Mark Done"
                        type="object"
                        help="Mark Done"
                        class="oe_highlight"
                        attrs="{'invisible': [('default_stages', '!=', 'Doing')]}"
                        confirm="Are you sure you want to continue?"
                    />
                    <button
                        name="action_assign_complexity_l2_td"
                        string="Assign Complexity L-2"
                        type="object"
                        help="Assign Complexity L-2"
                        class="oe_highlight"
                        attrs="{'invisible': [('default_stages', '!=', 'New')]}"
                        confirm="Are you sure you want to continue?"
                    />
                    <button
                        name="action_assign_complexity_l3_td"
                        string="Assign Complexity L-3"
                        type="object"
                        help="Assign Complexity L-3"
                        class="oe_highlight"
                        attrs="{'invisible': [('default_stages', '!=', 'New')]}"
                        confirm="Are you sure you want to continue?"
                    />
                    <field name="default_stages" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="problem" string="Name" placeholder="Problem"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="type"/>
                        </group>
                        <group>
                            <field name="complexity" readonly="1" options="{'no_create_edit': True}"/>
                        </group>
                    </group>
                    <group string="Customer Info">
                        <!--Left-->
                        <group>
                            <field name="customer" string="Customer Name" options="{'no_create_edit': True}"/>
                            <field name="customer_mobile" string="Customer Mobile" readonly="1"/>
                            <field name="customer_phone" string="Customer Phone" readonly="1"/>
                        </group>
                        <!--Right-->
                        <group>
                            <field name="customer_email" string="Customer Email" readonly="1"/>
                            <field name="customer_company" string="Customer Company" readonly="1"/>
                            <field name="customer_address" string="Customer Address"/>
                        </group>
                    </group>
                    <group string="Team Info">
                        <!--Left-->
                        <group>
                            <field name="assigned_to" options="{'no_create_edit': True}"/>
                            <field name="team"/>
                        </group>
                        <!--Right-->
                        <group>
                            <field name="team_leader"/>
                            <field name="priority" widget="priority"/>
                        </group>
                    </group>
                    <notebook colspan="4">
                        <!--Solutions list-->
                        <page string="Tasks">
                            <field name="solution_ids" mode="tree">
                                <!--solution line form-->
                                <form string="Tasks">
                                    <group>
                                        <group>
                                            <field name="solution_id" force_save="1"/>
                                            <field name="name" class="oe_inline"/>
                                            <field name="assigned_to" class="oe_inline"/>
                                            <field name="is_done" class="oe_inline"/>
                                        </group>
                                    </group>
                                </form>
                                <!--solution line tree-->
                                <tree string="Tasks" editable="bottom" >
                                    <field name="solution_id" force_save="1"/>
                                    <field name="name" />
                                    <field name="assigned_to" />
                                    <field name="is_done" />
                                </tree>
                            </field>
                        </page>

                        <page string="Description">
                            <group>
                                <field name="description" mode="tree" modifiers="{}"/>
                            </group>
                        </page>
                        <page string="Customer Feedback">
                            <!--Left-->
                            <group>
                                <field name="customer_feedback" readonly="1"/>
                            </group>
                            <!--Right-->
                            <group>
                                <field name="customer_rating" widget="priority" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                   <field name="message_follower_ids" widget="mail_followers"/>
                   <field name="activity_ids" widget="mail_activity"/>
                   <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                </div>`
            </form>
        </field>
    </record>

    <record id="send_helpdesk_ticket_maintenance_mail_template" model="isp_crm_module.mail">
        <field name="name">Helpdesk Ticket Maintenance Mail</field>
        <field name="body_html"><![CDATA[

            <p><strong>Dear Valued Client,</strong></p>
            <p>Thanks for contacting MIME!</p>
            <p>This is just a quick note to let you know, your ticket <strong>--ticketnumber--</strong> has been forwarded to our technical department team. It may take <strong>--hour--</strong> to resolve your issue.</p>
            <p>We will reach to you know as soon as your issue is resolved.</p>
            <p></p>
            <p>We appreciate your patience. Thanks for being with MIME</p>

        ]]>

        </field>
    </record>

    <record model="ir.actions.act_window" id="isp_crm_helpdesk_td">
        <field name="name">Helpdesk Technical Department</field>
        <field name="res_model">isp_crm_module.helpdesk_td</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain" eval=""/>
        <field name="search_view_id" ref="isp_crm_module.helpdesk_td_ticket_search"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Welcome to ISP CRM Helpdesk Technical Department. Click to create a new ticket.
            </p>
        </field>
    </record>

    <menuitem
            id="isp_crm_hd_td_menu"
            name="Technical Department Ticket"
            parent="isp_crm_hd"
            action="isp_crm_helpdesk_td"
    />

</odoo>