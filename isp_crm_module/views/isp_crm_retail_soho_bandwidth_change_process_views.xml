<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="isp_crm_module_retail_soho_bandwidth_change_search" model="ir.ui.view">
        <field name="problem">Retail SOHO Bandwidth Change Ticket - Search</field>
        <field name="model">isp_crm_module.retail_soho_bandwidth_change</field>
        <field name="arch" type="xml">
            <search string="Request Search">
                <field name="name"/>
<!--                <field name="problem"/>-->
<!--                <field name="description"/>-->
                <field name="default_stages"/>
            </search>
        </field>
    </record>


    <!--Ticket Kanban-->
    <record model="ir.ui.view" id="view_isp_crm_module_retail_soho_bandwidth_change_kanban">
        <field name="problem">isp_crm_module.retail_soho_bandwidth_change.kanban</field>
        <field name="model">isp_crm_module.retail_soho_bandwidth_change</field>
        <field name="type">kanban</field>
        <field name="arch" type="xml">
            <kanban default_group_by="default_stages" class="o_kanban_small_column o_kanban_project_tasks">
                <field name="default_stages" options='{"group_by_tooltip": {"requirements": "Description", "legend_priority": "Use of stars"}}'/>
                <field name="name"/>
                <field name="color"/>
<!--                <field name="priority"/>-->
<!--                <field name="customer"/>-->
<!--                <field name="description"/>-->
<!--                <field name="problem"/>-->
<!--                <field name="tagged_product_ids"/>-->
                <templates>
                <t t-name="kanban-box">
                    <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
                        <div class="oe_kanban_content">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title"><field name="ticket_ref"/></strong><br/>
                                    <strong class="o_kanban_record_title"><field name="customer"/></strong><br/>
<!--                                    <field name="tagged_product_ids" widget="many2many_tags" options="{'color_field': 'color'}" readonly="1"/>-->
<!--                                    <small class="o_kanban_record_subtitle text-muted">-->
<!--                                        <field name="problem" />-->
<!--                                    </small>-->
                                </div>
                                <div class="o_dropdown_kanban dropdown" groups="base.group_user">
                                    <a class="dropdown-toggle btn" data-toggle="dropdown" href="#" >
                                        <span class="fa fa-ellipsis-v" aria-hidden="true"/>
                                    </a>
                                    <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                        <li t-if="widget.editable"><a type="edit">Edit Ticket</a></li>
                                        <li t-if="widget.deletable"><a type="delete">Delete</a></li>
                                        <li class="divider"></li>
                                        <li class="dropdown-header">Record's Colour</li>
                                        <li>
                                            <ul class="oe_kanban_colorpicker" data-field="color"/>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="priority" widget="priority"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                </div>
                            </div>
                        </div>
                        <div class="oe_clear"></div>
                    </div>
                </t>
                </templates>
            </kanban>
        </field>
    </record>


    <record id="isp_crm_module_retail_soho_bandwidth_change_tree" model="ir.ui.view">
        <field name="problem">isp_crm_module.retail_soho_bandwidth_change.tree</field>
        <field name="model">isp_crm_module.retail_soho_bandwidth_change</field>
        <field name="arch" type="xml">
            <tree string="Service Request">
                <field name="name"/>
                <field name="default_stages"/>
            </tree>
        </field>
    </record>

    <record id="isp_crm_module_retail_soho_bandwidth_change_form" model="ir.ui.view">
        <field name="problem">isp_crm_module.retail_soho_bandwidth_change.form</field>
        <field name="model">isp_crm_module.retail_soho_bandwidth_change</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <form string="Bandwidth Change Request">
                <sheet>
                    <div class="oe_title">
                        <h1><field name="ticket_ref" string="Ticket ID" readonly="1"/></h1>
                        <h1><field name="problem" string="Name" placeholder="Problem" attrs="{'required': True}"/></h1>
                    </div>
                    <group string="Customer Info">
                        <!--Left-->
                        <group>
                            <field name="customer" string="Customer Name" options="{'no_create_edit': True}" attrs="{'required': True}"/>
                            <field name="customer_id" string="Customer ID" readonly="1"/>
                            <field name="customer_type" readonly="1"/>
                        </group>
                    </group>
                    <group string="Package Info">
                        <!--Left-->
                        <group>
                            <field name="current_package" string="Current Package" attrs="{'required': True}"/>
                            <field name="proposed_new_package" attrs="{'required': True}"/>
                            <field name="quantity" attrs="{'invisible': [('customer_type', '=', 'retail')]}"/>
                            <field name="proposed_package_price" string="Proposed Package Price" attrs="{'required': True}"/>
                        </group>
                        <!--Right-->
                        <group>
                            <field name="proposed_activation_date" attrs="{'required': True}"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                   <field name="message_follower_ids" widget="mail_followers"/>
                   <field name="activity_ids" widget="mail_activity"/>
                   <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                </div>
            </form>
        </field>
    </record>

    <record id="isp_crm_module_retail_soho_bandwidth_change_request_action" model="ir.actions.act_window">
        <field name="name">Retail Bandwidth Change Request</field>
        <field name="res_model">isp_crm_module.retail_soho_bandwidth_change</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[]</field>
        <field name="search_view_id" ref="isp_crm_module_retail_soho_bandwidth_change_search" />
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Help Text
            </p>
        </field>
    </record>

</odoo>