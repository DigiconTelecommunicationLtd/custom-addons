<odoo>
  <data>
    <!-- explicit tree view definition -->

    <record model="ir.ui.view" id="emergence_balance_paid_balance_tree">
      <field name="name">Paid Balance Requests</field>
      <field name="model">emergency.balance</field>
      <field name="arch" type="xml">
        <tree create="false" delete="false" edit="false" string="emergency_balance" default_order="id desc">
            <field name="customer"/>
            <field name="subscriber_id"/>
            <field name="emergency_date"/>
            <!--TODO: Must complete this-->
          <!-- tree got another editable="top"| "bottom" -->
          <!--
          <field name="name"/>
          <field name="amount"/>
          <field name="is_done"/>
          <field name="active"/>
          shows sum in below
          <field name="amount" sum="Total value" widget="monetary"/>
          -->
        </tree>
      </field>
    </record>

     <!-- explicit Form definition -->
    <record id="emergence_balance_paid_balance_view_form" model="ir.ui.view">
        <field name="name">paid Balance Request Form</field>
        <field name="model">emergency.balance</field>
        <field name="arch" type="xml">
            <form create="false" delete="false" edit="false" string="emergence_balance_emergency_balance">
            <!-- Fields name -->
                <header>

                    <field name="state" widget="statusbar"/>

                </header>
                <sheet>

                    <group name="group_top">
                        <group name="group_left">
                            <field name="customer"  options="{'no_create': True, 'no_create_edit':True}" />

                        </group>
                        <group name="group_right" attrs="{'invisible': [('customer', '=', False)]}">
                            <field name="subscriber_id"/>
                             <field name="emergency_date"/>
                            <field name="current_package"/>
                            <field name="current_package_price"/>
                            <field name="current_package_end_date"/>
                            <field name="next_package_start_date"/>
                            <field name="assigned_rm"/>
                            



                        </group>
                    </group>
                </sheet>
            </form>
        </field>
     </record>


     <!-- Search Model -->
      <record id="emergence_balance_paid_balance_view_filter" model="ir.ui.view">
        <field name="name">paid Balance Request Filter</field>
        <field name="model">emergency.balance</field>
        <field name="arch" type="xml">
            <search>
                <!--
                <field name="name"/>
                <filter string="Not Done" domain="[('is_done','=',False)]"/>
                <filter string="Done" domain="[('is_done','!=',False)]"/>
                -->
            </search>
        </field>
      </record>


    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="emergence_balance_paid_balance_action_window">
        <field name="name">paid Balance Requests</field>
        <field name="res_model">emergency.balance</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('due_paid','=','True')]</field>
       <!-- <field name="context">{}</field> -->
        <!-- <field name="target">new</field> -->
      <!--        Setting default search-->
<!--        <field name="context">{"search_default_successful_transaction":1}</field>-->
    </record>
     <record model="ir.actions.act_window.view" id="emergence_balance_paid_balance_tree_view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="emergence_balance_paid_balance_tree"/>
            <field name="act_window_id" ref="emergence_balance_paid_balance_action_window"/>
        </record>

        <record model="ir.actions.act_window.view" id="emergence_balance_paid_balance_form_view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="emergence_balance_paid_balance_view_form"/>
            <field name="act_window_id" ref="emergence_balance_paid_balance_action_window"/>
        </record>




  </data>
</odoo>